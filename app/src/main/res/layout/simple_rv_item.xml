<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dir_item__tv_num1"
        style="@style/itemText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dir_item__tv_dest"
        style="@style/boldText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="top"
        android:maxLines="1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/dir_item__tv_link"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Название направления" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dir_item__tv_descr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/opensans_regular"
        android:maxLines="3"
        android:paddingRight="15dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/dir_item__tv_link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/dir_item__tv_link"
        app:layout_constraintTop_toBottomOf="@id/dir_item__tv_dest"
        tools:text="Математическое обеспечение и администрирование информационных систем" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dir_item__tv_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/opensans_regular"
        android:text="@string/fragment__quiz__quiz_results__next_text_button"
        android:textColor="#8FEB9D"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/dir_item__tv_num1"
        app:layout_constraintTop_toBottomOf="@id/dir_item__tv_descr" />

</androidx.constraintlayout.widget.ConstraintLayout>
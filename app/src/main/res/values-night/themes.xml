<resources xmlns:tools="http://schemas.android.com/tools">
       <!-- Base application theme. -->
    <style name="Launcher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="Theme.PolyCareer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
        <item name="colorPrimary">@color/splash_dark_d</item>
        <item name="colorPrimaryVariant">@color/dark_background</item>
        <item name="colorOnPrimary">@color/dark_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_green</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/dark_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="background">
        <item name="android:background">@color/night_splash_dark</item>
    </style>

    <style name="headerText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="lightText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/opensans_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="boldText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="regularText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="editText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">30</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:background">@drawable/edit_text_frame</item>
        <item name="android:height">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="itemText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/rect</item>
        <item name="android:textColor">@color/night_splash_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="checkBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/opensans_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:height">20dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="buttonTint">@color/dark_btn</item>
    </style>

    <style name="horizontalProgress" >
        <item name="trackColor">@color/night_splash_light</item>
        <item name="android:progress">0</item>
        <item name="android:max">100</item>
        <item name="trackThickness">30dp</item>
        <item name="indicatorColor">@color/dark_btn</item>
    </style>
</resources>